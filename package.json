{
	"name": "@great_ape77/ethereum-wallet-cli",
	"version": "1.1.0",
	"description": "A ethereum wallet built for the terminal",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"termiwallet": "dist/index.js"
	},
	
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/GreatApe77/ethereum-wallet-cli.git"
	},
	"directories": {
		"doc": "docs"
	},
	"scripts": {
		"dev": "npx tsx --watch src/index.ts",
		"test": "npx vitest --config ./vitest.config.ts --run --reporter=verbose",
		"test:dev": "npx vitest --config ./vitest.config.ts",
		"coverage": "npx vitest --coverage",
		"build": "npx tsc",
		"start": "node ./dist/index.js"
	},
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"ethereum",
		"wallet",
		"cli",
		"typescript",
		"nodejs",
		"ethers",
		"terminal"
	],
	"author": "Mateus Navarro",
	"license": "MIT",
	"devDependencies": {
		"@types/figlet": "^1.5.8",
		"@types/inquirer": "^9.0.7",
		"@vitest/coverage-v8": "^1.6.0",
		"tsx": "^4.9.4",
		"typescript": "^5.4.5",
		"vitest": "^1.6.0"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"ethers": "^6.12.1",
		"figlet": "^1.7.0",
		"inquirer": "^9.2.20",
		"inquirer-interrupted-prompt": "^3.0.0",
		"nanospinner": "^1.1.0"
	}
}
